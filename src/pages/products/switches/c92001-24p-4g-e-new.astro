            </div>

            <!-- Contenido de las Pestañas -->
            <div class="p-4 md:p-6 lg:p-8">
              
              <!-- Sección Producto -->
              <div id="information-section">
                <div class="flex flex-col lg:flex-row gap-8">
                  
