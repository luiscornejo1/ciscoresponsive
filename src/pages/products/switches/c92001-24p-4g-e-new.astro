              </div>
            </div>

            <!-- Pestañas -->
            <div class="border-b border-gray-200 bg-gray-50">
              <nav class="flex">
                <button id="product-tab" 
                        class="flex-1 md:flex-none md:px-8 py-4 bg-white text-cisco-blue border-b-2 border-cisco-blue font-semibold transition-all duration-300 flex items-center justify-center">
                  <i class="fas fa-info-circle mr-2"></i>
                  <span>Producto</span>
                </button>
                <button id="images-tab" 
                        class="flex-1 md:flex-none md:px-8 py-4 bg-gray-50 text-gray-600 hover:bg-white hover:text-gray-800 font-semibold transition-all duration-300 flex items-center justify-center">
                  <i class="fas fa-images mr-2"></i>
                  <span>Imágenes</span>
                </button>
