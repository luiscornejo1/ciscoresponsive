---
// src/components/ProductGallery.astro
export interface Props {
  imagenPrincipal: string;
  miniaturas: string[];
}

const { imagenPrincipal, miniaturas } = Astro.props;
---

<div class="lg:w-1/2">
  <div class="bg-white rounded-lg shadow-sm p-4">
    <div class="w-full h-[400px] flex items-center justify-center overflow-hidden">
      <img 
        id="img_main"
        src={imagenPrincipal}
        alt="Switch Catalyst"
        class="max-h-full max-w-full object-contain cursor-pointer"
        onclick="viewImage(this.src)"
      />
    </div>
    
    <div class="flex gap-3 mt-4 justify-center">
      {miniaturas.map((imagen, index) => (
        <div class="w-20 h-20 border rounded p-1 cursor-pointer hover:border-blue-400 transition">
          <img 
            src={imagen}
            alt={`Vista ${index + 1}`}
            class="w-full h-full object-contain"
            onclick="toExchangeImage(this)"
          />
        </div>
      ))}
    </div>
  </div>
</div>
